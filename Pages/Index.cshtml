@page
@using ScrapingGoogle.Pages
@model IndexModel

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h1>SEO Rank Checker</h1>
<form method="post">
    @Html.AntiForgeryToken()
    <div>
        <label for="keywords">Keywords:</label>
        <input type="text" id="keywords" name="keywords"
               placeholder="land registry searches" required />
    </div>
    <div>
        <label for="targeturl">Target URL:</label>
        <input type="text" id="TargetUrl" name="TargetUrl"
               placeholder="www.infotrack.co.uk" required />
    </div>
    <button type="submit" class="btn btn-submit">Search</button>
</form>

@if (Model.Results != null)
{
    <div class="results">
        <h3>Positions: @Model.Results</h3>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}